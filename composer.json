{
    "name": "daosoft/hyperman",
    "type": "project",
    "description": "A coroutine framework that focuses on hyperspeed and flexible.",
    "keywords": [
        "daosoft",
        "hyperman",
        "swoole",
        "php"
    ],
    "license": "Apache-2.0",
    "support": {
        "issues": "https://github.com/daosoft/hyperman/issues?state=open",
        "source": "https://github.com/daosoft/hyperman"
    },
    "require": {
        "php": "^8.0",
        "ext-swoole": "^4.6",
        "hyperf-ext/jwt": "^2.1",
        "hyperf/cache": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/filesystem": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/http-server": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/model-cache": "~2.2.0",
        "hyperf/paginator": "~2.2.0",
        "hyperf/process": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/session": "~2.2.0",
        "hyperf/validation": "~2.2.0",
        "hyperf/view-engine": "~2.2.0",
        "hyperf/websocket-server": "~2.2.0",
        "overtrue/easy-sms": "^1.3",
        "overtrue/pinyin": "^4.0",
        "overtrue/wechat": "^5.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "~2.2.0",
        "hyperf/ide-helper": "~2.2.0",
        "hyperf/testing": "~2.2.0",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^4.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": [],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container",
            "@php artisan init"
        ],
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php artisan start"
        ]
    }
}
